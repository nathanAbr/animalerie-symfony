{{ render(controller("AppBundle:Default:index")) }}

{% block body %}
    <h3 class="text-center">{{ parent[0].label }}</h3>
    <ul>
    {% for pet in pets %}
        <div class="card" style="width: 18rem;">
            <h5 class="card-title">{{ pet.label }}</h5>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                {% for key, picture in pet.pictures %}
                    {% if key == 0 %}
                        <li data-target="#carouselExampleIndicators" data-slide-to="{{ key }}" class="active"></li>
                    {% else %}
                        <li data-target="#carouselExampleIndicators" data-slide-to="{{ key }}"></li>
                    {% endif %}
                {% endfor %}
                </ol>
                <div class="carousel-inner">
                {% for key, picture in pet.pictures %}
                    {% if key == 0 %}
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="{{ asset('images/uploads/'.picture.url) }}" alt="">
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img class="d-block w-100" src="{{ asset('images/uploads/'.picture.url) }}" alt="">
                        </div>
                    {% endif %}
                {% endfor %}
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <a href="#" class="btn btn-success">Commander</a>
                </p>
            </div>
        </div>
    {% endfor %}
    </ul>
{% endblock %}